<div class="skt-builder-block-wrapper skt-builder-home-section1-block skt-builder-home-section1-block-{{id}}" style="background-color: {{blockBackgroundColor}}; background-image: url({{blockBgImageUrl}}); padding-bottom: {{blockPaddingBottom}}px; padding-top: {{blockPaddingTop}}px; {{#if blockParallaxEffect}}background-attachment: fixed;{{/if}}">
	<div class="skt-builder-block-inner skt-builder-block-inner-{{id}}" style="{{#if blockAnimation}}visibility: hidden;{{/if}}">
		<div class="skt-builder-container">
			{{#if blockTitle}}
				<div class="skt-builder-block-title" style="text-align: {{blockTitleAlign}};">
					<h2 style="color: {{blockTitleColor}}; font-size: {{blockTitleFontSize}}px; {{#if blockTitleSeparator}}margin-bottom: 0;{{else}}margin-bottom: {{blockTitleMarginBottom}}px;{{/if}} text-align: {{blockTitleAlign}};">{{blockTitle}}</h2>
                    {{#if blockTitleSeparator}}<div class="skt-builder-block-title-separator" style="background-color: {{blockTitleSeparatorColor}}; margin-bottom: {{blockTitleMarginBottom}}px;"></div>{{/if}}
				</div>
			{{/if}}
			{{#if blockDescription}}
                <div class="skt-builder-block-description">{{{blockDescription}}}</div>
            {{/if}}
			<div class="skt-builder-columns-row skt-builder-columns-row-{{blockColumnsCount}}column">
			{{#if blockColumns.length}}
				{{#each_with_sort blockColumns "order"}}
					<div class="skt-builder-column skt-builder-featured-column skt-builder-featured-column-{{id}}">
                    	<style>
							.skt-builder-featured-column-{{id}} .skt-builder-block-button{background-color: {{blockButtonBgColor}}; color: {{blockButtonTextColor}};}
							.skt-builder-featured-column-{{id}} .skt-builder-block-button:hover{}
							.skt-builder-featured-column-{{id}} .featured-column-button{color:{{blockButtonTextColor}};  background:{{blockButtonBgColor}};}
							.skt-builder-featured-column-{{id}} .featured-column-button:hover{border-color:{{blockButtonHoverBorderColor}};}
							.skt-builder-featured-column-{{id}} .skt-builder-featured-column-title{font-size:{{TitleFontSize}}px;}
							.skt-builder-featured-column-{{id}}:hover .featured-column-button{background-color: {{blockButtonHoverBgColor}}; color: {{blockButtonHoverTextColor}};}
							.skt-builder-featured-column-{{id}}{background:{{BoxBgColor}};}
							.skt-builder-featured-column-{{id}}:hover{background:{{BoxHoverBgColor}};}
							
							
						</style>
						{{#if columnContent}}
							<div class="skt-builder-column-inner product-column-inner">
                            	<img class="skt-builder-featured-column-image product-image" src="{{columnImage}}">
                                <h3 class="skt-builder-featured-column-title" style="color: {{titleColor}};">{{title}}</h3>
                                <div class="skt-builder-featured-column-text">{{{columnContent}}}</div>
                                <a class="skt-builder-block-button featured-column-button" href="{{blockButtonLink}}" {{#if blockButtonLinkTarget}}target="_blank"{{/if}}>{{blockButtonText}}</a>
                            </div>
						{{/if}}
					</div>
				{{/each_with_sort}}
			{{/if}}
			</div>
		</div>
	</div>
</div>

