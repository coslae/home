{
    "name": "Home Section 2",
    "groups": "home-sections",
    "template": "template.hbs",
    "settings": [{
        "name": "blockTitle",
        "label": "Title",
        "type": "text"
    }, {
		"name": "blockTitleColor",
		"label": "Title Color",
		"type": "colorpicker",
		"colors": ["#886af8", "#89c421", "#5cb4f2", "#f58231", "#9A6324", "#800000"]
	}, {
        "name": "blockTitleFontSize",
        "label": "Title Font Size",
        "type": "slider",
    	"min": "0",
    	"max": "150"
    }, {
        "name": "blockTitleMarginBottom",
        "label": "Title Margin Bottom",
        "type": "slider",
    	"min": "0",
    	"max": "200"
    }, {
        "name": "blockTitleSeparator",
        "label": "Title Separator",
        "type": "checkbox_switch"
    }, {
		"name": "blockTitleSeparatorColor",
		"label": "Title Separator Color",
		"type": "colorpicker",
		"colors": ["#886af8", "#89c421", "#5cb4f2", "#f58231", "#9A6324", "#800000"]
	}, {
        "name": "blockTitleAlign",
        "label": "Title Alignment",
        "type": "select",
        "default": "left",
        "options": [{
            "id": "left",
            "val": "Left"
        }, {
            "id": "center",
            "val": "Center"
        }, {
            "id": "right",
            "val": "Right"
        }, {
            "id": "justify",
            "val": "Justify"
        }]
    }, {
        "name": "blockDescription",
        "label": "Text",
        "type": "textarea"
    }, {
        "name": "blockButtonText",
        "label": "Button Text",
        "type": "text"
    }, {
        "name": "blockButtonLink",
        "label": "Button Link",
        "type": "text"
    }, {
        "name": "blockButtonLinkTarget",
        "label": "Open button link in new tab?",
        "type": "checkbox_switch"
    }, {
		"name": "blockButtonTextColor",
		"label": "Button Text Color",
		"type": "colorpicker",
		"colors": ["#886af8", "#89c421", "#5cb4f2", "#f58231", "#9A6324", "#800000"]
	}, {
		"name": "blockButtonBgColor",
		"label": "Button Background Color",
		"type": "colorpicker",
		"colors": ["#886af8", "#89c421", "#5cb4f2", "#f58231", "#9A6324", "#800000"]
	}, {
		"name": "blockButtonHoverTextColor",
		"label": "Button Hover Text Color",
		"type": "colorpicker",
		"colors": ["#886af8", "#89c421", "#5cb4f2", "#f58231", "#9A6324", "#800000"]
	}, {
		"name": "blockButtonHoverBgColor",
		"label": "Button Hover Background Color",
		"type": "colorpicker",
		"colors": ["#886af8", "#89c421", "#5cb4f2", "#f58231", "#9A6324", "#800000"]
	}, {
        "name": "blockSwitchPosition",
        "label": "Switch Content Position",
        "type": "checkbox_switch"
    }, {
        "name": "blockAnimation",
        "label": "Enable Animation",
        "type": "checkbox_switch"
    }, {
        "name": "blockAnimationEffect",
        "label": "Animation Effect",
