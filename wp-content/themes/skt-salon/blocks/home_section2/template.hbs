<div class="skt-builder-block-wrapper skt-builder-home-section2-block skt-builder-home-section2-block-{{id}}" style="background-color: {{blockBackgroundColor}}; background-image: url({{blockBgImageUrl}}); padding-bottom: {{blockPaddingBottom}}px; padding-top: {{blockPaddingTop}}px; {{#if blockParallaxEffect}}background-attachment: fixed;{{/if}}">
	<div class="skt-builder-block-inner skt-builder-block-inner-{{id}}" style="{{#if blockAnimation}}visibility: hidden;{{/if}}">
		<div class="skt-builder-container">
        	<style>
            	.skt-builder-home-section2-block-{{id}} .skt-builder-block-button{background-color: {{blockButtonBgColor}}; color: {{blockButtonTextColor}};}
				.skt-builder-home-section2-block-{{id}} .skt-builder-block-button:hover{background-color: {{blockButtonHoverBgColor}}; color: {{blockButtonHoverTextColor}};}
				.skt-builder-home-section2-block-{{id}} .skt-builder-block-button2{background-color: {{blockButtonBgColor2}}; color: {{blockButtonTextColor2}};}
				.skt-builder-home-section2-block-{{id}} .skt-builder-block-button2:hover{background-color: {{blockButtonHoverBgColor2}}; color: {{blockButtonHoverTextColor2}};}
            </style>
			<div class="skt-builder-columns-row skt-builder-columns-row-2column">
				{{#if blockSwitchPosition}}
					<div class="skt-builder-column">
						{{#if blockImage}}
							<div class="skt-builder-column-inner"><img class="skt-builder-home-section1-block-img" style="margin-top: {{blockImagePosition}}px;" src="{{blockImage}}"></div>
						{{/if}}
					</div>
					<div class="skt-builder-column">
						{{#if blockTitle}}
							<div class="skt-builder-block-title" style="text-align: {{blockTitleAlign}};">
                                <h2 style="color: {{blockTitleColor}}; font-size: {{blockTitleFontSize}}px; {{#if blockTitleSeparator}}margin-bottom: 0;{{else}}margin-bottom: {{blockTitleMarginBottom}}px;{{/if}} text-align: {{blockTitleAlign}};"><small>{{blockTitleSmall}}</small> {{blockTitle}}</h2>
                                {{#if blockTitleSeparator}}<div class="skt-builder-block-title-separator" style="background-color: {{blockTitleSeparatorColor}}; margin-bottom: {{blockTitleMarginBottom}}px;"></div>{{/if}}
                            </div>
						{{/if}}
						{{#if blockDescription}}
							<div class="skt-builder-column-inner">
                            	{{{blockDescription}}}
                                {{#if blockButtonText}}<a class="skt-builder-block-button" href="{{blockButtonLink}}" {{#if blockButtonLinkTarget}}target="_blank"{{/if}}>{{blockButtonText}}</a>{{/if}}
                                {{#if blockButtonText2}}<a class="skt-builder-block-button2" href="{{blockButtonLink2}}" {{#if blockButtonLinkTarget2}}target="_blank"{{/if}}>{{blockButtonText2}}</a>{{/if}}
                            </div>
						{{/if}}
					</div>
				{{else}}
                	<div class="skt-builder-column">
						{{#if blockTitle}}
							<div class="skt-builder-block-title" style="text-align: {{blockTitleAlign}};">
                                <h2 style="color: {{blockTitleColor}}; font-size: {{blockTitleFontSize}}px; {{#if blockTitleSeparator}}margin-bottom: 0;{{else}}margin-bottom: {{blockTitleMarginBottom}}px;{{/if}} text-align: {{blockTitleAlign}};"><small>{{blockTitleSmall}}</small> {{blockTitle}}</h2>
                                {{#if blockTitleSeparator}}<div class="skt-builder-block-title-separator" style="background-color: {{blockTitleSeparatorColor}}; margin-bottom: {{blockTitleMarginBottom}}px;"></div>{{/if}}
                            </div>
						{{/if}}
						{{#if blockDescription}}
							<div class="skt-builder-column-inner">
                            	{{{blockDescription}}}
                                {{#if blockButtonText}}<a class="skt-builder-block-button" href="{{blockButtonLink}}" {{#if blockButtonLinkTarget}}target="_blank"{{/if}}>{{blockButtonText}}</a>{{/if}}
                                {{#if blockButtonText2}}<a class="skt-builder-block-button2" href="{{blockButtonLink2}}" {{#if blockButtonLinkTarget2}}target="_blank"{{/if}}>{{blockButtonText2}}</a>{{/if}}
                            </div>
						{{/if}}
					</div>
					<div class="skt-builder-column">
						{{#if blockImage}}
							<div class="skt-builder-column-inner"><img class="skt-builder-home-section1-block-img" style="margin-top: {{blockImagePosition}}px;" src="{{blockImage}}"></div>
						{{/if}}
					</div>
				{{/if}}
			</div>
		</div>
	</div>
</div>
{{#if blockAnimation}}
<script>
jQuery.noConflict();
jQuery(document).ready(function(){
jQuery(window).scroll(function(){
    // This is then function used to detect if the element is scrolled into view
    function elementScrolled(elem)
    {
        var docViewTop = jQuery(window).scrollTop();
        var docViewBottom = docViewTop + jQuery(window).height();
        var elemTop = jQuery(elem).offset().top;
        return ((elemTop <= docViewBottom) && (elemTop >= docViewTop));
    }

	if (jQuery('.skt-builder-block-inner-{{id}}').length > 0) {
	if(elementScrolled('.skt-builder-block-inner-{{id}}')) {
        var els = jQuery('.skt-builder-block-inner-{{id}}'),
            i = 0,
            f = function () {
                jQuery(els[i++]).addClass('{{blockAnimationEffect}}');
                if(i < els.length) setTimeout(f, 400);
            };
        f();
    }}

});
});
</script>
{{/if}}